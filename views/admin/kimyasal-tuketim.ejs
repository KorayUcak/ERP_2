    form { display: grid; grid-template-columns: 1fr 1fr 1fr auto; gap: 12px; align-items: end; }
    label { display: block; margin-bottom: 8px; font-weight: 600; color: #2d3748; font-size: 13px; }
    input, select { background: #ffffff; color: #1a202c; border: 2px solid #e2e8f0; padding: 10px 12px; border-radius: 8px; font-family: 'Inter', sans-serif; font-size: 14px; transition: all 200ms ease; width: 100%; }
