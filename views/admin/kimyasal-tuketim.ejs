    button:hover { transform: translateY(-1px); box-shadow: 0 10px 25px rgba(102,126,234,0.3); }

    table { width: 100%; border-collapse: collapse; }
    th { background: #f7fafc; color: #4a5568; padding: 14px 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #e2e8f0; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px; }
    td { padding: 14px 16px; border-bottom: 1px solid #e2e8f0; color: #2d3748; font-size: 14px; }
