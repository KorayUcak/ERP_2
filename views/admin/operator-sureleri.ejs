    </div>

    <script>
      const operatorData = <%- JSON.stringify(operatorOzet) %>;
      
      const ctx = document.getElementById('operatorChart').getContext('2d');
      const operatorChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: operatorData.map(op => op.OperatorAdi),
          datasets: [{
            label: 'Toplam √áalƒ±≈üma S√ºresi (dk)',
            data: operatorData.map(op => op.ToplamSure || 0),
            backgroundColor: 'rgba(102, 126, 234, 0.8)',
            borderColor: 'rgba(102, 126, 234, 1)',
            borderWidth: 2,
            borderRadius: 8,
            hoverBackgroundColor: 'rgba(102, 126, 234, 1)'
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: true,
              position: 'top',
              labels: {
                font: {
                  family: 'Inter',
                  size: 14,
                  weight: '600'
                },
                padding: 15
              }
            },
            tooltip: {
              backgroundColor: 'rgba(0, 0, 0, 0.8)',
              padding: 12,
              titleFont: {
                family: 'Inter',
                size: 14,
                weight: '600'
              },
              bodyFont: {
                family: 'Inter',
                size: 13
              },
              callbacks: {
                label: function(context) {
                  const operator = operatorData[context.dataIndex];
                  return [
                    'Toplam S√ºre: ' + (operator.ToplamSure || 0) + ' dk',
                    'ƒ∞≈ülem Sayƒ±sƒ±: ' + (operator.IslemSayisi || 0)
                  ];
                }
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                font: {
                  family: 'Inter',
                  size: 12
                },
                callback: function(value) {
                  return value + ' dk';
                }
              },
              grid: {
                color: 'rgba(0, 0, 0, 0.05)'
              }
            },
            x: {
              ticks: {
                font: {
                  family: 'Inter',
                  size: 12,
                  weight: '500'
                }
              },
              grid: {
                display: false
              }
            }
          }
        }
      });
    </script>

    <!-- Operat√∂r Banyo Adƒ±mƒ± Detaylarƒ± -->
    <div class="content-card">
      <h2>üõÅ Operat√∂r - Banyo Adƒ±mƒ± S√ºre Detaylarƒ±</h2>
      <% if (banyoSureleri.length === 0) { %>
        <div style="background: #dbeafe; color: #1e40af; padding: 20px; border-radius: 8px; text-align: center; border: 1px solid #bfdbfe;">
          <p>Hen√ºz tamamlanmƒ±≈ü banyo i≈ülemi bulunmuyor.</p>
        </div>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>Operat√∂r</th>
              <th>Sipari≈ü Kodu</th>
              <th>Proses</th>
              <th>Banyo Adƒ±mƒ±</th>
              <th>Ba≈ülangƒ±√ß</th>
              <th>Biti≈ü</th>
              <th>Harcanan S√ºre</th>
              <th>Standart S√ºre</th>
              <th>Durum</th>
            </tr>
          </thead>
          <tbody>
            <% banyoSureleri.forEach(kayit => { %>
              <tr>
                <td><strong><%= kayit.OperatorAdi %></strong></td>
                <td><%= kayit.SiparisKodu %></td>
                <td><%= kayit.ProsesAdi %></td>
                <td><%= kayit.BanyoAdi || '-' %></td>
                <td><%= kayit.BaslangicZamani ? new Date(kayit.BaslangicZamani).toLocaleString('tr-TR') : '-' %></td>
                <td><%= kayit.BitisZamani ? new Date(kayit.BitisZamani).toLocaleString('tr-TR') : '-' %></td>
                <td style="font-weight: bold;"><%= kayit.HarcananSureDk || 0 %> dk</td>
                <td><%= kayit.SureDkMin && kayit.SureDkMax ? kayit.SureDkMin + '-' + kayit.SureDkMax + ' dk' : '-' %></td>
                <td>
                  <% if (!kayit.BitisZamani) { %>
                    <span class="badge badge-warning">Devam Ediyor</span>
                  <% } else if (kayit.SureDkMin && kayit.SureDkMax) { %>
                    <% if (kayit.HarcananSureDk < kayit.SureDkMin) { %>
                      <span class="badge badge-danger">S√ºre A≈üƒ±mƒ± (√áok Hƒ±zlƒ±)</span>
                    <% } else if (kayit.HarcananSureDk > kayit.SureDkMax) { %>
                      <span class="badge badge-danger">S√ºre A≈üƒ±mƒ± (√áok Yava≈ü)</span>
                    <% } else { %>
                      <span class="badge badge-success">Tamamlandƒ±</span>
                    <% } %>
                  <% } else { %>
                    <span class="badge badge-success">Tamamlandƒ±</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>

    <!-- Operat√∂r Bazlƒ± Banyo S√ºre Ortalamalarƒ± -->
    <div class="content-card">
      <h2>üìà Operat√∂r Bazlƒ± Banyo S√ºre Ortalamalarƒ±</h2>
      <% if (banyoOrtalama.length === 0) { %>
        <div style="background: #dbeafe; color: #1e40af; padding: 20px; border-radius: 8px; text-align: center; border: 1px solid #bfdbfe;">
          <p>Hen√ºz yeterli veri bulunmuyor.</p>
        </div>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>Operat√∂r</th>
              <th>Banyo Adƒ±mƒ±</th>
              <th>ƒ∞≈ülem Sayƒ±sƒ±</th>
              <th>Ortalama S√ºre</th>
              <th>Min S√ºre</th>
              <th>Max S√ºre</th>
            </tr>
          </thead>
          <tbody>
            <% banyoOrtalama.forEach(kayit => { %>
              <tr>
                <td><strong><%= kayit.OperatorAdi %></strong></td>
                <td><%= kayit.BanyoAdi || '-' %></td>
                <td><%= kayit.IslemSayisi %></td>
                <td style="font-weight: bold;"><%= Math.round(kayit.OrtalamaSure) %> dk</td>
                <td><%= kayit.MinSure %> dk</td>
                <td><%= kayit.MaxSure %> dk</td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>
</body>
</html>
