    .content-card h2 { color: #0F172A; font-size: 24px; font-weight: 700; margin-bottom: 24px; border-bottom: 3px solid #2563EB; padding-bottom: 12px; }
    table { width: 100%; border-collapse: collapse; }
    th { background: #F8FAFC; color: #0F172A; padding: 14px 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #E2E8F0; font-size: 14px; }
