    .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px; }
    .stat-card { background: linear-gradient(165deg, #2D3339 0%, #252A2E 100%); color: #E8E9EB; padding: 20px; border-radius: 4px; border: 1px solid #3D444D; text-align: center; }
    .stat-card h3 { font-size: 11px; color: #8A9199; margin-bottom: 10px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px; }
    .stat-card p { font-size: 28px; font-weight: 700; }
    .stat-card small { color: #8A9199; font-size: 12px; }
  </style>
</head>
<body>
  <nav class="navbar">
