<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Çıkış Kalite - Simya ERP</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/enterprise-style.css">
  <style>
    .btn-kontrol { background: linear-gradient(135deg, #10B981, #059669); color: white; border: none; padding: 10px 24px; border-radius: 10px; cursor: pointer; font-size: 14px; font-weight: 600; transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1); box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3); }
    .btn-kontrol:hover { transform: translateY(-2px); box-shadow: 0 8px 20px rgba(16, 185, 129, 0.4); }
    .modal { display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); }
    .modal-content { background: #FFFFFF; margin: 5% auto; padding: 32px; border-radius: 12px; width: 90%; max-width: 600px; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); }
    .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; }
    .modal-header h3 { font-size: 24px; color: #0F172A; font-weight: 700; }
    .close { font-size: 28px; font-weight: bold; cursor: pointer; color: #64748B; transition: color 150ms ease; }
    .close:hover { color: #0F172A; }
    .form-group { margin-bottom: 24px; }
    .form-group label { display: block; margin-bottom: 8px; font-weight: 600; color: #0F172A; font-size: 14px; }
    .form-group input, .form-group textarea { width: 100%; padding: 12px 16px; border: 2px solid #E2E8F0; border-radius: 8px; font-size: 14px; font-family: 'Inter', sans-serif; transition: all 150ms ease; }
    .form-group input:focus, .form-group textarea:focus { outline: none; border-color: #2563EB; box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1); }
    .form-group textarea { min-height: 100px; resize: vertical; }
    .form-group small { color: #64748B; font-size: 13px; display: block; margin-top: 6px; line-height: 1.4; }
    .input-with-badge { display: flex; align-items: center; gap: 12px; flex-wrap: wrap; }
    .input-with-badge input { flex: 1; min-width: 200px; }
    .expected-badge { background: #E0F2FE; color: #075985; padding: 10px 16px; border-radius: 8px; font-weight: 500; font-size: 13px; white-space: nowrap; border: 1px solid #BAE6FD; }
    .radio-group { display: flex; gap: 24px; margin-top: 12px; flex-wrap: wrap; }
    .radio-group label { display: flex; align-items: center; gap: 8px; font-weight: 500; color: #0F172A; cursor: pointer; font-size: 14px; }
    .radio-group input[type="radio"] { width: 18px; height: 18px; cursor: pointer; }
    .modal-info-box { background: #E0F2FE; padding: 16px; border-radius: 8px; margin-bottom: 24px; border: 1px solid #BAE6FD; }
    .modal-info-box p { margin: 0; color: #075985; font-size: 14px; line-height: 1.6; }
    .modal-info-box strong { font-weight: 600; }
    .btn-submit { background: #2563EB; color: white; border: none; padding: 14px 32px; border-radius: 8px; cursor: pointer; font-size: 16px; font-weight: 600; width: 100%; transition: all 150ms ease; font-family: 'Inter', sans-serif; }
    .btn-submit:hover { background: #1D4ED8; transform: translateY(-1px); box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.3), 0 4px 6px -2px rgba(37, 99, 235, 0.2); }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-header">
      <h1>Simya ERP - Personel Paneli</h1>
      <div class="navbar-right">
        <span class="user-info">Hoş geldiniz, <%= username %></span>
        <a href="/logout" class="logout-btn">Çıkış Yap</a>
      </div>
    </div>
    <div class="navbar-menu">
      <a href="/personel">Ana Sayfa</a>
      <a href="/personel/siparis-olustur">Sipariş Oluşturma</a>
      <a href="/personel/mal-kabul">Mal Kabul</a>
      <a href="/personel/giris-kalite">Giriş Kalite</a>
      <a href="/personel/uretim-planlama">Üretim Planlama</a>
      <a href="/personel/operator">Operatör</a>
      <a href="/personel/cikis-kalite" class="active">Çıkış Kalite</a>
      <a href="/personel/iade-yonetimi">İade Yönetimi</a>
      <a href="/personel/kimyasal-tuketim">Kimyasal Tüketim</a>
    </div>
  </nav>
  <div class="container">
    <div class="content-card">
      <h2>Çıkış Kalite Kontrol</h2>
      
      <% if (success) { %>
        <div style="background: #d4edda; color: #155724; padding: 12px; border-radius: 5px; margin-bottom: 20px;">
          <%= success %>
        </div>
      <% } %>
      
      <% if (error) { %>
        <div style="background: #f8d7da; color: #721c24; padding: 12px; border-radius: 5px; margin-bottom: 20px;">
          <%= error %>
        </div>
      <% } %>
      
      <% if (pendingQc.length === 0) { %>
        <div style="background: #d1ecf1; color: #0c5460; padding: 20px; border-radius: 5px; text-align: center;">
          <p style="font-size: 18px; margin: 0;">✅ Tüm siparisler kalite kontrolünden geçmiş!</p>
        </div>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>Sipariş Kodu</th>
              <th>Müşteri</th>
              <th>Parça Adı</th>
              <th>Parça Numarası</th>
              <th>Miktar</th>
              <th>İşlem</th>
            </tr>
          </thead>
          <tbody>
            <% pendingQc.forEach(siparis => { %>
              <tr>
                <td><strong><%= siparis.SiparisKodu %></strong></td>
                <td><%= siparis.MusteriAdi %></td>
                <td><%= siparis.ParcaAdi %></td>
                <td><%= siparis.ParcaNumarasi || '-' %></td>
                <td><%= siparis.Miktar %> adet</td>
                <td>
                  <button class="btn-kontrol" onclick="openModal(<%= siparis.SiparisDetayID %>, '<%= siparis.SiparisKodu %>', '<%= siparis.ParcaAdi %>')">
                    KONTROL ET
                  </button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>
  
  <div id="qcModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Kalite Kontrol</h3>
        <span class="close" onclick="closeModal()">&times;</span>
      </div>
      
      <div class="modal-info-box">
        <p><strong>Sipariş:</strong> <span id="modalSiparisInfo"></span></p>
      </div>
      
      <form action="/personel/cikis-kalite-kaydet" method="POST">
        <input type="hidden" name="siparis_detay_id" id="siparisDetayId">
        
        <div class="form-group">
          <label>Operatör Seçin:</label>
          <select name="operator_id" required>
            <option value="">-- Operatör Seçin --</option>
            <% operatorler.forEach(operator => { %>
              <option value="<%= operator.OperatorID %>"><%= operator.OperatorAdi %></option>
            <% }) %>
          </select>
        </div>
        
        <div class="form-group">
          <label>Toplam Miktar (Kontrol Edilen):</label>
          <div class="input-with-badge">
            <input type="number" name="toplam_miktar" required min="0">
            <span id="beklenenMiktarModal" class="expected-badge" style="display: none;"></span>
          </div>
        </div>
        
        <div class="form-group">
          <label>Uygunsuz Miktar:</label>
          <input type="number" name="uygunsuz_miktar" min="0" value="0">
          <small>Kalite kontrolünde reddedilen ürün sayısı</small>
        </div>
        
        <div class="form-group">
          <label>Durum:</label>
          <div class="radio-group">
            <label>
              <input type="radio" name="durum" value="sorunsuz" checked onchange="toggleHataKodu()">
              ✅ Sorunsuz (Onayla)
            </label>
            <label>
              <input type="radio" name="durum" value="hata" onchange="toggleHataKodu()">
              ❌ Hata Var (Red/Şerh)
            </label>
          </div>
        </div>
        
        <div class="form-group" id="hataKoduGroup" style="display: none;">
          <label>Hata Kodu:</label>
          <input type="text" name="hata_kodu" id="hataKodu" placeholder="Örn: H-001, Renk Uyuşmazlığı">
        </div>
        
        <div class="form-group">
          <label>Açıklama (Opsiyonel):</label>
          <textarea name="aciklama" placeholder="Kalite kontrol notlarınızı buraya girebilirsiniz..."></textarea>
        </div>
        
        <button type="submit" class="btn-submit">KAYDET</button>
      </form>
    </div>
  </div>
  
  <script>
    const pendingQcData = {
      <% if (pendingQc && pendingQc.length > 0) { %>
        <% pendingQc.forEach(function(siparis) { %>
          '<%= siparis.SiparisDetayID %>': { girisKaliteMiktar: <%= siparis.GirisKaliteMiktar || 0 %> },
        <% }); %>
      <% } %>
    };
    
    function openModal(siparisDetayId, siparisKodu, parcaAdi) {
      document.getElementById('siparisDetayId').value = siparisDetayId;
      document.getElementById('modalSiparisInfo').textContent = siparisKodu + ' - ' + parcaAdi;
      document.getElementById('qcModal').style.display = 'block';
      
      const beklenenSpan = document.getElementById('beklenenMiktarModal');
      if (pendingQcData[siparisDetayId] && pendingQcData[siparisDetayId].girisKaliteMiktar > 0) {
        beklenenSpan.textContent = 'Beklenen (Giriş Kalite): ' + pendingQcData[siparisDetayId].girisKaliteMiktar + ' Adet';
        beklenenSpan.style.display = 'inline-block';
      } else {
        beklenenSpan.style.display = 'none';
      }
    }
    
    function closeModal() {
      document.getElementById('qcModal').style.display = 'none';
      document.querySelector('form').reset();
      document.getElementById('hataKoduGroup').style.display = 'none';
    }
    
    function toggleHataKodu() {
      const hataRadio = document.querySelector('input[name="durum"][value="hata"]');
      const hataKoduGroup = document.getElementById('hataKoduGroup');
      const hataKoduInput = document.getElementById('hataKodu');
      
      if (hataRadio.checked) {
        hataKoduGroup.style.display = 'block';
        hataKoduInput.required = true;
      } else {
        hataKoduGroup.style.display = 'none';
        hataKoduInput.required = false;
        hataKoduInput.value = '';
      }
    }
    
    window.onclick = function(event) {
      const modal = document.getElementById('qcModal');
      if (event.target == modal) {
        closeModal();
      }
    }
  </script>
</body>
</html>
