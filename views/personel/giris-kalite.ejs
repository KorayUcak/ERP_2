<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Giriş Kalite - Simya ERP</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/enterprise-style.css">
</head>
<body>
  <nav class="navbar">
    <div class="navbar-header">
      <h1>Simya ERP - Personel Paneli</h1>
      <div class="navbar-right">
        <span class="user-info">Hoş geldiniz, <%= username %></span>
        <a href="/logout" class="logout-btn">Çıkış Yap</a>
      </div>
    </div>
    <div class="navbar-menu">
      <a href="/personel">Ana Sayfa</a>
      <a href="/personel/siparis-olustur">Sipariş Oluşturma</a>
      <a href="/personel/mal-kabul">Mal Kabul</a>
      <a href="/personel/giris-kalite" class="active">Giriş Kalite</a>
      <a href="/personel/uretim-planlama">Üretim Planlama</a>
      <a href="/personel/operator">Operatör</a>
      <a href="/personel/cikis-kalite">Çıkış Kalite</a>
      <a href="/personel/iade-yonetimi">İade Yönetimi</a>
      <a href="/personel/kimyasal-tuketim">Kimyasal Tüketim</a>
    </div>
  </nav>
  <div class="container">
    <div class="content-card">
      <h2>Giriş Kalite Kontrol</h2>
      
      <% if (success) { %>
        <div style="background: #d4edda; color: #155724; padding: 12px; border-radius: 5px; margin-bottom: 20px;">
          <%= success %>
        </div>
      <% } %>
      
      <% if (error) { %>
        <div style="background: #f8d7da; color: #721c24; padding: 12px; border-radius: 5px; margin-bottom: 20px;">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/personel/giris-kalite" method="POST">
        <div style="margin-bottom: 20px;">
          <label style="display: block; margin-bottom: 5px; font-weight: 500;">Sipariş Seçin:</label>
          <select name="siparis_id" id="siparisSelect" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
            <option value="">Bir Sipariş Seçiniz</option>
            <% if (orders && orders.length > 0) { %>
              <% orders.forEach(function(order) { %>
                <option value="<%= order.SiparisDetayID %>">
                  <%= order.SiparisKodu %> - <%= order.MusteriAdi %> - <%= order.ParcaAdi %> (<%= order.Miktar %> Adet)
                </option>
              <% }); %>
            <% } else { %>
              <option value="" disabled>Listelenecek sipariş yok</option>
            <% } %>
          </select>
        </div>
        
        <div style="margin-bottom: 20px;">
          <label style="display: block; margin-bottom: 5px; font-weight: 500;">Operatör Seçin:</label>
          <select name="operator_id" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
            <option value="">Operatör Seçiniz...</option>
            <% if (typeof operators !== 'undefined') { %>
              <% operators.forEach(function(op) { %>
                <option value="<%= op.OperatorID %>"><%= op.AdSoyad %></option>
              <% }); %>
            <% } %>
          </select>
        </div>
        
        <div style="margin-bottom: 20px;">
          <label style="display: block; margin-bottom: 5px; font-weight: 500;">Toplam Miktar (Kontrol Edilen):</label>
          <div style="display: flex; align-items: center; gap: 15px;">
            <input type="number" name="toplam_miktar" required min="0" style="flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
            <span id="beklenenMiktar" style="background: #e7f3ff; color: #004085; padding: 10px 15px; border-radius: 5px; font-weight: 500; display: none;"></span>
          </div>
        </div>
        
        <div style="background: #f8f9fa; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
          <h3 style="margin-bottom: 10px; font-size: 18px;">Kayıp Ürün Bilgisi (Opsiyonel)</h3>
          
          <div style="margin-bottom: 15px;">
            <label style="display: block; margin-bottom: 5px; font-weight: 500;">Kayıp Miktar:</label>
            <input type="number" name="kayip_miktar" min="0" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
          </div>
          
          <div>
            <label style="display: block; margin-bottom: 5px; font-weight: 500;">Kayıp Açıklama:</label>
            <textarea name="kayip_aciklama" rows="3" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;"></textarea>
          </div>
        </div>
        
        <button type="submit" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; padding: 12px 30px; border-radius: 5px; cursor: pointer; font-size: 16px;">
          Kalite Kontrolü Tamamla
        </button>
      </form>
    </div>
  </div>
<script>
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('status') === 'success') {
        alert("✅ Giriş Kalite Kontrolü Başarıyla Tamamlandı! Sipariş planlamaya aktarıldı.");
        window.history.replaceState(null, null, window.location.pathname);
    }
    
    const ordersData = {
      <% if (orders && orders.length > 0) { %>
        <% orders.forEach(function(order) { %>
          '<%= order.SiparisDetayID %>': { malKabulMiktar: <%= order.MalKabulMiktar || 0 %> },
        <% }); %>
      <% } %>
    };
    
    document.getElementById('siparisSelect').addEventListener('change', function() {
      const selectedId = this.value;
      const beklenenSpan = document.getElementById('beklenenMiktar');
      
      if (selectedId && ordersData[selectedId] && ordersData[selectedId].malKabulMiktar > 0) {
        beklenenSpan.textContent = 'Beklenen (Mal Kabul): ' + ordersData[selectedId].malKabulMiktar + ' Adet';
        beklenenSpan.style.display = 'inline-block';
      } else {
        beklenenSpan.style.display = 'none';
      }
    });
</script>
</body>
</html>
