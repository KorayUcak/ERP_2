<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mal Kabul - Simya ERP</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; background: #1A1D21; color: #E8E9EB; }
    .navbar { background: linear-gradient(180deg, #2D3339 0%, #252A2E 100%); color: #E8E9EB; padding: 16px 32px; box-shadow: 0 4px 20px rgba(0,0,0,0.3); border-bottom: 1px solid #3D444D; }
    .navbar-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px; }
    .navbar-header h1 { font-size: 20px; font-weight: 700; letter-spacing: 0.5px; text-transform: uppercase; }
    .navbar-right { display: flex; align-items: center; gap: 20px; }
    .user-info { font-size: 13px; color: #8A9199; }
    .logout-btn { background: transparent; color: #B0B7BF; border: 1px solid #3D444D; padding: 8px 20px; border-radius: 3px; cursor: pointer; text-decoration: none; transition: all 200ms ease; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px; }
    .logout-btn:hover { background: rgba(74,111,165,0.1); border-color: #4A6FA5; color: #E8E9EB; }
    .navbar-menu { display: flex; gap: 4px; flex-wrap: wrap; }
    .navbar-menu a { color: #8A9199; text-decoration: none; padding: 10px 16px; border-radius: 3px; transition: all 200ms ease; font-size: 13px; font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px; }
    .navbar-menu a:hover { background: rgba(74,111,165,0.15); color: #E8E9EB; }
    .navbar-menu a.active { background: rgba(74,111,165,0.2); color: #4A6FA5; }
    .container { max-width: 1200px; margin: 32px auto; padding: 0 24px; }
    .content-card { background: linear-gradient(165deg, #2D3339 0%, #252A2E 100%); padding: 40px; border-radius: 4px; border: 1px solid #3D444D; }
    .content-card h2 { color: #E8E9EB; font-size: 24px; font-weight: 700; margin-bottom: 24px; border-bottom: 1px solid #3D444D; padding-bottom: 12px; }
    .content-card p { color: #8A9199; font-size: 15px; line-height: 1.6; }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-header">
      <h1>Simya ERP - Personel Paneli</h1>
      <div class="navbar-right">
        <span class="user-info">Hoş geldiniz, <%= username %></span>
        <a href="/logout" class="logout-btn">Çıkış Yap</a>
      </div>
    </div>
    <div class="navbar-menu">
      <a href="/personel">Ana Sayfa</a>
      <a href="/personel/siparis-olustur">Sipariş Oluşturma</a>
      <a href="/personel/mal-kabul" class="active">Mal Kabul</a>
      <a href="/personel/giris-kalite">Giriş Kalite</a>
      <a href="/personel/uretim-planlama">Üretim Planlama</a>
      <a href="/personel/operator">Operatör</a>
      <a href="/personel/cikis-kalite">Çıkış Kalite</a>
      <a href="/personel/iade-yonetimi">İade Yönetimi</a>
      <a href="/personel/kimyasal-tuketim">Kimyasal Tüketim</a>
    </div>
  </nav>
  <div class="container">
    <div class="content-card">
      <h2>Mal Kabul</h2>
      
      <% if (success) { %>
        <div style="background: #D1FAE5; color: #065F46; padding: 12px 16px; border-radius: 8px; margin-bottom: 24px; border: 1px solid #A7F3D0; font-weight: 500;">
          <%= success %>
        </div>
      <% } %>
      
      <% if (error) { %>
        <div style="background: #FEE2E2; color: #991B1B; padding: 12px 16px; border-radius: 8px; margin-bottom: 24px; border: 1px solid #FECACA; font-weight: 500;">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/personel/mal-kabul" method="POST" enctype="multipart/form-data">
        <div style="margin-bottom: 24px;">
          <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #0F172A; font-size: 14px;">Sipariş Seçin:</label>
          <select name="siparis_id" required style="width: 100%; padding: 12px 16px; border: 2px solid #E2E8F0; border-radius: 8px; font-family: 'Inter', sans-serif; font-size: 14px; transition: all 150ms ease;" onfocus="this.style.borderColor='#2563EB'; this.style.boxShadow='0 0 0 3px rgba(37, 99, 235, 0.1)';" onblur="this.style.borderColor='#E2E8F0'; this.style.boxShadow='none';">
            <option value="">Bir Sipariş Seçiniz</option>
            <% if (orders && orders.length > 0) { %>
              <% orders.forEach(function(order) { %>
                <option value="<%= order.SiparisDetayID %>">
                  <%= order.SiparisKodu %> - <%= order.MusteriAdi %> - <%= order.ParcaAdi %> (<%= order.Miktar %> Adet)
                </option>
              <% }); %>
            <% } else { %>
              <option value="" disabled>Listelenecek sipariş yok</option>
            <% } %>
          </select>
        </div>
        
        <div style="margin-bottom: 24px;">
          <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #0F172A; font-size: 14px;">Operatör Seçin:</label>
          <select name="operator_id" required style="width: 100%; padding: 12px 16px; border: 2px solid #E2E8F0; border-radius: 8px; font-family: 'Inter', sans-serif; font-size: 14px; transition: all 150ms ease;" onfocus="this.style.borderColor='#2563EB'; this.style.boxShadow='0 0 0 3px rgba(37, 99, 235, 0.1)';" onblur="this.style.borderColor='#E2E8F0'; this.style.boxShadow='none';">
            <option value="">Operatör Seçiniz...</option>
            <% if (typeof operators !== 'undefined') { %>
              <% operators.forEach(function(op) { %>
                <option value="<%= op.OperatorID %>"><%= op.AdSoyad %></option>
              <% }); %>
            <% } %>
          </select>
        </div>
        
        <div style="margin-bottom: 24px;">
          <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #0F172A; font-size: 14px;">Toplam Miktar (Teslim Alınan):</label>
          <div style="display: flex; align-items: center; gap: 16px;">
            <input type="number" name="toplam_miktar" required min="0" style="flex: 1; padding: 12px 16px; border: 2px solid #E2E8F0; border-radius: 8px; font-family: 'Inter', sans-serif; font-size: 14px; transition: all 150ms ease;" onfocus="this.style.borderColor='#2563EB'; this.style.boxShadow='0 0 0 3px rgba(37, 99, 235, 0.1)';" onblur="this.style.borderColor='#E2E8F0'; this.style.boxShadow='none';">
            <span id="beklenenMiktar" style="background: #DBEAFE; color: #1E40AF; padding: 12px 16px; border-radius: 8px; font-weight: 600; font-size: 14px; display: none;"></span>
          </div>
        </div>
        
        <div style="margin-bottom: 24px;">
          <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #0F172A; font-size: 14px;">Eksik Miktar:</label>
          <input type="number" name="eksik_miktar" min="0" value="0" style="width: 100%; padding: 12px 16px; border: 2px solid #E2E8F0; border-radius: 8px; font-family: 'Inter', sans-serif; font-size: 14px; transition: all 150ms ease;" onfocus="this.style.borderColor='#2563EB'; this.style.boxShadow='0 0 0 3px rgba(37, 99, 235, 0.1)';" onblur="this.style.borderColor='#E2E8F0'; this.style.boxShadow='none';">
          <small style="color: #64748B; display: block; margin-top: 6px; font-size: 13px;">Teslimatta eksik/hasarlı ürün varsa giriniz</small>
        </div>
        
        <div style="margin-bottom: 24px;">
          <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #0F172A; font-size: 14px;">Ürün Fotoğrafı:</label>
          <input type="file" name="fotograf" accept="image/*" style="width: 100%; padding: 10px; border: 2px solid #E2E8F0; border-radius: 8px; background: #F8FAFC; font-family: 'Inter', sans-serif; font-size: 14px;">
        </div>
        
        <button type="submit" style="background: #2563EB; color: white; border: none; padding: 14px 32px; border-radius: 8px; cursor: pointer; font-size: 16px; font-weight: 600; font-family: 'Inter', sans-serif; transition: all 150ms ease;" onmouseover="this.style.background='#1D4ED8'; this.style.transform='translateY(-1px)'; this.style.boxShadow='0 10px 15px -3px rgba(37, 99, 235, 0.3), 0 4px 6px -2px rgba(37, 99, 235, 0.2)';" onmouseout="this.style.background='#2563EB'; this.style.transform=''; this.style.boxShadow='';" onmousedown="this.style.transform='translateY(0)';" onmouseup="this.style.transform='translateY(-1px)';">
          Mal Kabul Tamamla
        </button>
      </form>
    </div>
  </div>
<script>
  const ordersData = {
    <% if (orders && orders.length > 0) { %>
      <% orders.forEach(function(order) { %>
        '<%= order.SiparisDetayID %>': { miktar: <%= order.Miktar %> },
      <% }); %>
    <% } %>
  };
  
  document.querySelector('select[name="siparis_id"]').addEventListener('change', function() {
    const selectedId = this.value;
    const beklenenSpan = document.getElementById('beklenenMiktar');
    
    if (selectedId && ordersData[selectedId]) {
      beklenenSpan.textContent = 'Beklenen: ' + ordersData[selectedId].miktar + ' Adet';
      beklenenSpan.style.display = 'inline-flex';
    } else {
      beklenenSpan.style.display = 'none';
    }
  });
</script>
</body>
</html>
