<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mal Kabul - Simya ERP</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/enterprise-style.css">
</head>
<body>
  <nav class="navbar">
    <div class="navbar-header">
      <h1>Simya ERP - Personel Paneli</h1>
      <div class="navbar-right">
        <span class="user-info">Hoş geldiniz, <%= username %></span>
        <a href="/logout" class="logout-btn">Çıkış Yap</a>
      </div>
    </div>
    <div class="navbar-menu">
      <a href="/personel">Ana Sayfa</a>
      <a href="/personel/siparis-olustur">Sipariş Oluşturma</a>
      <a href="/personel/mal-kabul" class="active">Mal Kabul</a>
      <a href="/personel/giris-kalite">Giriş Kalite</a>
      <a href="/personel/uretim-planlama">Üretim Planlama</a>
      <a href="/personel/operator">Operatör</a>
      <a href="/personel/cikis-kalite">Çıkış Kalite</a>
      <a href="/personel/iade-yonetimi">İade Yönetimi</a>
      <a href="/personel/kimyasal-tuketim">Kimyasal Tüketim</a>
    </div>
  </nav>
  <div class="container">
    <div class="content-card">
      <h2>Mal Kabul</h2>
      
      <% if (success) { %>
        <div class="alert-success">
          <%= success %>
        </div>
      <% } %>
      
      <% if (error) { %>
        <div class="alert-error">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/personel/mal-kabul" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label>Sipariş Seçin:</label>
          <select name="siparis_id" required>
            <option value="">Bir Sipariş Seçiniz</option>
            <% if (orders && orders.length > 0) { %>
              <% orders.forEach(function(order) { %>
                <option value="<%= order.SiparisDetayID %>">
                  <%= order.SiparisKodu %> - <%= order.MusteriAdi %> - <%= order.ParcaAdi %> (<%= order.Miktar %> Adet)
                </option>
              <% }); %>
            <% } else { %>
              <option value="" disabled>Listelenecek sipariş yok</option>
            <% } %>
          </select>
        </div>
        
        <div class="form-group">
          <label>Operatör Seçin:</label>
          <select name="operator_id" required>
            <option value="">Operatör Seçiniz...</option>
            <% if (typeof operators !== 'undefined') { %>
              <% operators.forEach(function(op) { %>
                <option value="<%= op.OperatorID %>"><%= op.AdSoyad %></option>
              <% }); %>
            <% } %>
          </select>
        </div>
        
        <div class="form-group">
          <label>Toplam Miktar (Teslim Alınan):</label>
          <div style="display: flex; align-items: center; gap: 16px;">
            <input type="number" name="toplam_miktar" required min="0" style="flex: 1;">
            <span id="beklenenMiktar" class="badge badge-info" style="display: none;"></span>
          </div>
        </div>
        
        <div class="form-group">
          <label>Eksik Miktar:</label>
          <input type="number" name="eksik_miktar" min="0" value="0">
          <small style="color: #718096; display: block; margin-top: 6px; font-size: 13px;">Teslimatta eksik/hasarlı ürün varsa giriniz</small>
        </div>
        
        <div class="form-group">
          <label>Ürün Fotoğrafı:</label>
          <input type="file" name="fotograf" accept="image/*">
        </div>
        
        <button type="submit" class="btn-primary" style="width: 100%;">
          Mal Kabul Tamamla
        </button>
      </form>
    </div>
  </div>
<script>
  const ordersData = {
    <% if (orders && orders.length > 0) { %>
      <% orders.forEach(function(order) { %>
        '<%= order.SiparisDetayID %>': { miktar: <%= order.Miktar %> },
      <% }); %>
    <% } %>
  };
  
  document.querySelector('select[name="siparis_id"]').addEventListener('change', function() {
    const selectedId = this.value;
    const beklenenSpan = document.getElementById('beklenenMiktar');
    
    if (selectedId && ordersData[selectedId]) {
      beklenenSpan.textContent = 'Beklenen: ' + ordersData[selectedId].miktar + ' Adet';
      beklenenSpan.style.display = 'inline-flex';
    } else {
      beklenenSpan.style.display = 'none';
    }
  });
</script>
</body>
</html>
