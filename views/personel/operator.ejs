<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Operatör - Simya ERP</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; background: #1A1D21; color: #E8E9EB; }
    .navbar { background: linear-gradient(180deg, #2D3339 0%, #252A2E 100%); color: #E8E9EB; padding: 16px 32px; box-shadow: 0 4px 20px rgba(0,0,0,0.3); border-bottom: 1px solid #3D444D; }
    .navbar-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px; }
    .navbar-header h1 { font-size: 20px; font-weight: 700; letter-spacing: 0.5px; text-transform: uppercase; }
    .navbar-right { display: flex; align-items: center; gap: 20px; }
    .user-info { font-size: 13px; color: #8A9199; }
    .logout-btn { background: transparent; color: #B0B7BF; border: 1px solid #3D444D; padding: 8px 20px; border-radius: 3px; cursor: pointer; text-decoration: none; transition: all 200ms ease; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px; }
    .logout-btn:hover { background: rgba(74,111,165,0.1); border-color: #4A6FA5; color: #E8E9EB; }
    .navbar-menu { display: flex; gap: 4px; flex-wrap: wrap; }
    .navbar-menu a { color: #8A9199; text-decoration: none; padding: 10px 16px; border-radius: 3px; transition: all 200ms ease; font-size: 13px; font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px; }
    .navbar-menu a:hover { background: rgba(74,111,165,0.15); color: #E8E9EB; }
    .navbar-menu a.active { background: rgba(74,111,165,0.2); color: #4A6FA5; }
    .container { max-width: 1200px; margin: 32px auto; padding: 0 24px; }
    .content-card { background: linear-gradient(165deg, #2D3339 0%, #252A2E 100%); padding: 40px; border-radius: 4px; border: 1px solid #3D444D; }
    .content-card h2 { color: #E8E9EB; font-size: 24px; font-weight: 700; margin-bottom: 24px; border-bottom: 1px solid #3D444D; padding-bottom: 12px; }
    .content-card p { color: #8A9199; font-size: 15px; line-height: 1.6; }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-header">
      <h1>Simya ERP - Personel Paneli</h1>
      <div class="navbar-right">
        <span class="user-info">Hoş geldiniz, <%= username %></span>
        <a href="/logout" class="logout-btn">Çıkış Yap</a>
      </div>
    </div>
    <div class="navbar-menu">
      <a href="/personel">Ana Sayfa</a>
      <a href="/personel/siparis-olustur">Sipariş Oluşturma</a>
      <a href="/personel/mal-kabul">Mal Kabul</a>
      <a href="/personel/giris-kalite">Giriş Kalite</a>
      <a href="/personel/uretim-planlama">Üretim Planlama</a>
      <a href="/personel/operator" class="active">Operatör</a>
      <a href="/personel/cikis-kalite">Çıkış Kalite</a>
      <a href="/personel/iade-yonetimi">İade Yönetimi</a>
      <a href="/personel/kimyasal-tuketim">Kimyasal Tüketim</a>
    </div>
  </nav>
  <div class="container">
    <div class="content-card">
      <h2>Operatör Ekranı</h2>
      
      <% if (success) { %>
        <div style="background: #d4edda; color: #155724; padding: 12px; border-radius: 5px; margin-bottom: 20px;">
          <%= success %>
        </div>
      <% } %>
      
      <% if (error) { %>
        <div style="background: #f8d7da; color: #721c24; padding: 12px; border-radius: 5px; margin-bottom: 20px;">
          <%= error %>
        </div>
      <% } %>
      
      <div style="margin-bottom: 30px;">
        <div style="margin-bottom: 20px;">
          <label style="display: block; margin-bottom: 5px; font-weight: 500;">Operatör Seçin:</label>
          <select id="operatorSelect" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
            <option value="">Operatör Seçiniz...</option>
            <% if (typeof operators !== 'undefined') { %>
              <% operators.forEach(function(op) { %>
                <option value="<%= op.OperatorID %>"><%= op.AdSoyad %></option>
              <% }); %>
            <% } %>
          </select>
        </div>
        
        <div style="margin-bottom: 20px;">
          <label style="display: block; margin-bottom: 5px; font-weight: 500;">Sipariş Seçin:</label>
          <select id="siparisSelect" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
            <option value="">-- Sipariş Seçin --</option>
            <% siparisler.forEach(siparis => { %>
              <option value="<%= siparis.SiparisDetayID %>" data-fotograf="<%= siparis.UrunFotografi %>" data-cizim="<%= siparis.CizimDosyaYolu %>">
                #<%= siparis.SiparisDetayID %> - <%= siparis.MusteriAdi %> - <%= siparis.ParcaAdi %>
              </option>
            <% }) %>
          </select>
        </div>
        
        <div id="siparisDetay" style="display: none;">
          <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px; margin-bottom: 30px;">
            <div>
              <h3 style="margin-bottom: 15px;">Ürün Fotoğrafı (Mal Kabul)</h3>
              <div id="fotografContainer" style="border: 2px solid #ddd; border-radius: 5px; padding: 10px; min-height: 200px; display: flex; align-items: center; justify-content: center; background: #f8f9fa;">
                <p style="color: #999;">Fotoğraf yüklenmemiş</p>
              </div>
            </div>
            
            <div>
              <h3 style="margin-bottom: 15px;">Sipariş Bilgileri</h3>
              <div id="siparisInfo" style="background: #f8f9fa; padding: 15px; border-radius: 5px; min-height: 200px;">
                <p style="color: #999;">Sipariş bilgisi yüklenecek</p>
              </div>
            </div>
          </div>
          
          <div style="background: #fff3cd; border-left: 4px solid #ffc107; padding: 15px; margin-bottom: 20px; border-radius: 5px;">
            <strong style="color: #856404;">⚠️ Talimat:</strong>
            <p style="color: #856404; margin-top: 5px;">Aşağıdaki adımları sırasıyla uygulamanız gerekmektedir. Her adımı tamamlamadan diğerine geçemezsiniz.</p>
          </div>
          
          <div id="adimsContainer" style="margin-bottom: 20px;">
            <h3 style="margin-bottom: 15px; font-size: 22px; color: #333;">Üretim Adımları</h3>
            <div id="adimlarListesi"></div>
          </div>
          
          <div id="kaliteyeGonderContainer" style="display: none; text-align: center; padding: 30px; background: #d4edda; border-radius: 10px;">
            <h3 style="color: #155724; margin-bottom: 15px;">✅ Tüm Adımlar Tamamlandı!</h3>
            <button onclick="islemiBitir()" style="background: #28a745; color: white; border: none; padding: 15px 40px; border-radius: 5px; cursor: pointer; font-size: 18px; font-weight: 600;">
              İŞLEMİ BİTİR VE KALİTEYE GÖNDER
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    let siparisId = null;
    let operatorId = null;
    let currentAdimIndex = 0;
    let adimTimers = {};
    const plans = <%- JSON.stringify(plans) %>;
    
    const siparisData = <%- JSON.stringify(siparisler) %>;
    
    document.getElementById('siparisSelect').addEventListener('change', function() {
      siparisId = this.value;
      
      if (siparisId) {
        document.getElementById('siparisDetay').style.display = 'block';
        
        const siparis = siparisData.find(s => s.SiparisDetayID == siparisId);
        
        const fotografContainer = document.getElementById('fotografContainer');
        if (siparis.UrunFotografi && siparis.UrunFotografi !== 'null' && siparis.UrunFotografi !== 'undefined') {
          fotografContainer.innerHTML = '<img src="/uploads/' + siparis.UrunFotografi + '" style="max-width: 100%; max-height: 300px; border-radius: 5px;">';
        } else {
          fotografContainer.innerHTML = '<p style="color: #999;">Ürün fotoğrafı yüklenmemiş</p>';
        }
        
        const siparisInfo = document.getElementById('siparisInfo');
        let infoHTML = '<div style="font-size: 14px; line-height: 2;">';
        infoHTML += '<div><strong>Sipariş Kodu:</strong> ' + (siparis.SiparisKodu || '-') + '</div>';
        infoHTML += '<div><strong>Müşteri:</strong> ' + (siparis.MusteriAdi || '-') + '</div>';
        infoHTML += '<div><strong>Parça Adı:</strong> ' + (siparis.ParcaAdi || '-') + '</div>';
        infoHTML += '<div><strong>Parça Türü:</strong> ' + (siparis.ParcaTuru || '-') + '</div>';
        infoHTML += '<div><strong>Miktar:</strong> ' + (siparis.Miktar || '-') + ' Adet</div>';
        infoHTML += '<div><strong>Parça Numarası:</strong> ' + (siparis.ParcaNumarasi || '-') + '</div>';
        infoHTML += '<div><strong>Çizim Revizyonu:</strong> ' + (siparis.CizimRevizyonu || '-') + '</div>';
        infoHTML += '<div><strong>Kaplama Standardı:</strong> ' + (siparis.KaplamaStandardiKodu || '-') + '</div>';
        infoHTML += '<div><strong>Termin Tarihi:</strong> ' + (siparis.TerminTarihi ? new Date(siparis.TerminTarihi).toLocaleDateString('tr-TR') : '-') + '</div>';
        infoHTML += '</div>';
        siparisInfo.innerHTML = infoHTML;
        
        renderAdimlar();
      } else {
        document.getElementById('siparisDetay').style.display = 'none';
      }
    });
    
    function renderAdimlar() {
      const adimlarListesi = document.getElementById('adimlarListesi');
      const planlar = plans[siparisId];
      
      if (!planlar || planlar.length === 0) {
        adimlarListesi.innerHTML = '<p style="color: #999;">Bu sipariş için planlama bulunamadı</p>';
        return;
      }
      
      let html = '';
      planlar.forEach((plan, index) => {
        const adimNo = index + 1;
        const banyoInfo = plan.HedefBanyoAdi ? plan.HedefBanyoAdi : 'Banyo belirtilmemiş';
        const sureMin = plan.SureDkMin || 0;
        const sureMax = plan.SureDkMax || 0;
        const sureInfo = (sureMin > 0 || sureMax > 0) ? `(Min: ${sureMin} dk, Max: ${sureMax} dk)` : '';
        
        html += `
          <div id="adim_${plan.PlanID}" style="background: white; border: 2px solid #ddd; border-radius: 8px; padding: 20px; margin-bottom: 15px;" data-suremin="${sureMin}" data-suremax="${sureMax}">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
              <div>
                <h4 style="font-size: 18px; color: #333; margin-bottom: 5px;">
                  ${adimNo}. Adım: ${plan.ProsesAdi}
                </h4>
                <p style="color: #666; font-size: 14px;">
                  <strong>Planlanan Banyo:</strong> ${banyoInfo} <span style="color: #007bff; font-weight: 500;">${sureInfo}</span>
                </p>
              </div>
              <div id="status_${plan.PlanID}" style="font-weight: bold; color: #999;">BEKLİYOR</div>
            </div>
            
            <div id="sureInfo_${plan.PlanID}" style="display: none; text-align: center; margin-bottom: 10px;">
              <span style="background: #e7f3ff; padding: 5px 15px; border-radius: 15px; font-size: 13px; color: #004085;">
                ⏱️ Min: <strong>${sureMin}</strong> dk | Max: <strong>${sureMax}</strong> dk
              </span>
            </div>
            
            <div id="timer_${plan.PlanID}" style="font-size: 32px; font-weight: bold; color: #667eea; text-align: center; margin: 15px 0; display: none;">
              00:00:00
            </div>
            
            <div style="text-align: center;">
              <button id="btn_${plan.PlanID}" onclick="toggleAdim(${plan.PlanID}, '${banyoInfo}', ${sureMin}, ${sureMax})" 
                style="background: #28a745; color: white; border: none; padding: 12px 30px; border-radius: 5px; font-size: 16px; font-weight: 600; ${index > 0 ? 'opacity: 0.5; cursor: not-allowed;' : 'cursor: pointer;'}"
                ${index > 0 ? 'disabled' : ''}>
                BAŞLAT
              </button>
            </div>
          </div>
        `;
      });
      
      adimlarListesi.innerHTML = html;
      currentAdimIndex = 0;
    }
    
    function toggleAdim(planId, banyoAdi, sureMin, sureMax) {
      operatorId = document.getElementById('operatorSelect').value;
      
      if (!operatorId) {
        alert('Lütfen önce operatör seçin!');
        return;
      }
      
      const btn = document.getElementById('btn_' + planId);
      const timer = document.getElementById('timer_' + planId);
      const status = document.getElementById('status_' + planId);
      const sureInfoEl = document.getElementById('sureInfo_' + planId);
      
      console.log('toggleAdim çağrıldı, planId:', planId, 'btn.textContent:', btn.textContent);
      
      if (btn.textContent.trim() === 'BAŞLAT') {
        fetch('/personel/operator/baslat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            siparis_id: siparisId, 
            operator_id: operatorId, 
            plan_id: planId,
            banyo_adi: banyoAdi 
          })
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            btn.textContent = 'BİTİR';
            btn.style.background = '#dc3545';
            status.textContent = 'DEVAM EDİYOR';
            status.style.color = '#ffc107';
            timer.style.display = 'block';
            if (sureInfoEl) sureInfoEl.style.display = 'block';
            
            adimTimers[planId] = {
              startTime: new Date(),
              sureMin: sureMin || 0,
              sureMax: sureMax || 0,
              interval: setInterval(() => updateAdimTimer(planId), 1000)
            };
          } else {
            alert('Hata: ' + data.error);
          }
        });
      } else {
        if (adimTimers[planId]) {
          clearInterval(adimTimers[planId].interval);
          delete adimTimers[planId];
        }
        
        fetch('/personel/operator/bitir', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ siparis_id: siparisId, plan_id: planId })
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            btn.disabled = true;
            btn.style.opacity = '0.5';
            btn.style.cursor = 'not-allowed';
            btn.textContent = 'TAMAMLANDI';
            status.textContent = 'TAMAMLANDI';
            status.style.color = '#28a745';
            timer.style.display = 'none';
            const sureInfoElFinish = document.getElementById('sureInfo_' + planId);
            if (sureInfoElFinish) sureInfoElFinish.style.display = 'none';
            
            currentAdimIndex++;
            const planlar = plans[siparisId];
            
            console.log('Adım tamamlandı. currentAdimIndex:', currentAdimIndex, 'planlar.length:', planlar.length);
            
            if (currentAdimIndex < planlar.length) {
              const nextPlan = planlar[currentAdimIndex];
              console.log('Sonraki plan:', nextPlan, 'PlanID:', nextPlan.PlanID);
              const nextBtn = document.getElementById('btn_' + nextPlan.PlanID);
              console.log('Sonraki buton:', nextBtn);
              if (nextBtn) {
                nextBtn.disabled = false;
                nextBtn.style.opacity = '1';
                nextBtn.style.cursor = 'pointer';
                nextBtn.style.background = '#28a745';
                nextBtn.style.pointerEvents = 'auto';
                nextBtn.removeAttribute('disabled');
                console.log('Sonraki buton aktif edildi');
              } else {
                console.log('Sonraki buton bulunamadı! btn_' + nextPlan.PlanID);
              }
            } else {
              document.getElementById('kaliteyeGonderContainer').style.display = 'block';
            }
          } else {
            alert('Hata: ' + data.error);
          }
        });
      }
    }
    
    function updateAdimTimer(planId) {
      const timer = adimTimers[planId];
      if (!timer) return;
      
      const now = new Date();
      const elapsed = Math.floor((now - timer.startTime) / 1000);
      const elapsedMinutes = Math.floor(elapsed / 60);
      
      const timerEl = document.getElementById('timer_' + planId);
      const btn = document.getElementById('btn_' + planId);
      
      if (timerEl) {
        timerEl.textContent = formatTime(elapsed);
        
        if (timer.sureMin > 0 && timer.sureMax > 0) {
          if (elapsedMinutes < timer.sureMin) {
            timerEl.style.color = '#ffc107';
            btn.style.background = '#dc3545';
          } else if (elapsedMinutes >= timer.sureMin && elapsedMinutes <= timer.sureMax) {
            timerEl.style.color = '#28a745';
            btn.style.background = '#28a745';
          } else if (elapsedMinutes > timer.sureMax) {
            timerEl.style.color = '#dc3545';
            btn.style.background = '#dc3545';
          }
        }
      }
    }
    
    function formatTime(seconds) {
      const h = Math.floor(seconds / 3600);
      const m = Math.floor((seconds % 3600) / 60);
      const s = seconds % 60;
      return String(h).padStart(2, '0') + ':' + String(m).padStart(2, '0') + ':' + String(s).padStart(2, '0');
    }
    
    function islemiBitir() {
      if (!siparisId) {
        alert('Sipariş seçilmemiş!');
        return;
      }
      
      fetch('/personel/operator/islem-bitir', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ siparis_id: siparisId })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          window.location.href = '/personel';
        } else {
          alert('Hata: ' + data.error);
        }
      })
      .catch(error => {
        alert('Bir hata oluştu: ' + error.message);
      });
    }
  </script>
</body>
</html>
