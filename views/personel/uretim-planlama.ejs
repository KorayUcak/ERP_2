<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Üretim Planlama - Simya ERP</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; background: #1A1D21; color: #E8E9EB; }
    .navbar { background: linear-gradient(180deg, #2D3339 0%, #252A2E 100%); color: #E8E9EB; padding: 16px 32px; box-shadow: 0 4px 20px rgba(0,0,0,0.3); border-bottom: 1px solid #3D444D; }
    .navbar-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px; }
    .navbar-header h1 { font-size: 20px; font-weight: 700; letter-spacing: 0.5px; text-transform: uppercase; }
    .navbar-right { display: flex; align-items: center; gap: 20px; }
    .user-info { font-size: 13px; color: #8A9199; }
    .logout-btn { background: transparent; color: #B0B7BF; border: 1px solid #3D444D; padding: 8px 20px; border-radius: 3px; cursor: pointer; text-decoration: none; transition: all 200ms ease; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px; }
    .logout-btn:hover { background: rgba(74,111,165,0.1); border-color: #4A6FA5; color: #E8E9EB; }
    .navbar-menu { display: flex; gap: 4px; flex-wrap: wrap; }
    .navbar-menu a { color: #8A9199; text-decoration: none; padding: 10px 16px; border-radius: 3px; transition: all 200ms ease; font-size: 13px; font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px; }
    .navbar-menu a:hover { background: rgba(74,111,165,0.15); color: #E8E9EB; }
    .navbar-menu a.active { background: rgba(74,111,165,0.2); color: #4A6FA5; }
    .container { max-width: 1200px; margin: 32px auto; padding: 0 24px; }
    .content-card { background: linear-gradient(165deg, #2D3339 0%, #252A2E 100%); padding: 40px; border-radius: 4px; border: 1px solid #3D444D; }
    .content-card h2 { color: #E8E9EB; font-size: 24px; font-weight: 700; margin-bottom: 24px; border-bottom: 1px solid #3D444D; padding-bottom: 12px; }
    .content-card p { color: #8A9199; font-size: 15px; line-height: 1.6; }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-header">
      <h1>Simya ERP - Personel Paneli</h1>
      <div class="navbar-right">
        <span class="user-info">Hoş geldiniz, <%= username %></span>
        <a href="/logout" class="logout-btn">Çıkış Yap</a>
      </div>
    </div>
    <div class="navbar-menu">
      <a href="/personel">Ana Sayfa</a>
      <a href="/personel/siparis-olustur">Sipariş Oluşturma</a>
      <a href="/personel/mal-kabul">Mal Kabul</a>
      <a href="/personel/giris-kalite">Giriş Kalite</a>
      <a href="/personel/uretim-planlama" class="active">Üretim Planlama</a>
      <a href="/personel/operator">Operatör</a>
      <a href="/personel/cikis-kalite">Çıkış Kalite</a>
      <a href="/personel/iade-yonetimi">İade Yönetimi</a>
      <a href="/personel/kimyasal-tuketim">Kimyasal Tüketim</a>
    </div>
  </nav>
  <div class="container">
    <div class="content-card">
      <h2>Üretim Planlama</h2>
      
      <% if (success) { %>
        <div style="background: #d4edda; color: #155724; padding: 12px; border-radius: 5px; margin-bottom: 20px;">
          <%= success %>
        </div>
      <% } %>
      
      <% if (error) { %>
        <div style="background: #f8d7da; color: #721c24; padding: 12px; border-radius: 5px; margin-bottom: 20px;">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/personel/uretim-planlama" method="POST">
        <div style="margin-bottom: 20px;">
          <label style="display: block; margin-bottom: 5px; font-weight: 500;">Sipariş Seçin:</label>
          <select name="siparis_id" id="siparisSelect" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
            <option value="">Bir Sipariş Seçiniz</option>
            <% if (orders && orders.length > 0) { %>
              <% orders.forEach(function(order) { %>
                <option value="<%= order.SiparisDetayID %>" 
                  data-cizim="<%= order.CizimDosyaYolu || '' %>"
                  data-parcaadi="<%= order.ParcaAdi || '' %>"
                  data-parcaturu="<%= order.ParcaTuru || '' %>"
                  data-miktar="<%= order.Miktar || '' %>"
                  data-parcanumarasi="<%= order.ParcaNumarasi || '' %>"
                  data-cizimrevizyonu="<%= order.CizimRevizyonu || '' %>"
                  data-kaplamastandardi="<%= order.KaplamaStandardiKodu || '' %>"
                  data-termintarihi="<%= order.TerminTarihi || '' %>"
                  data-musteriadi="<%= order.MusteriAdi || '' %>"
                  data-sipariskodu="<%= order.SiparisKodu || '' %>">
                  <%= order.SiparisKodu %> - <%= order.MusteriAdi %> - <%= order.ParcaAdi %> (<%= order.Miktar %> Adet)
                </option>
              <% }); %>
            <% } else { %>
              <option value="" disabled>Listelenecek sipariş yok</option>
            <% } %>
          </select>
        </div>
        
        <div id="siparisDetayContainer" style="display: none; margin-bottom: 20px;">
          <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
            <div id="cizimContainer" style="background: #e7f3ff; padding: 20px; border-radius: 5px; text-align: center;">
              <h4 style="margin-bottom: 15px; color: #004085;">Teknik Çizim</h4>
              <div id="cizimGorsel"></div>
            </div>
            <div id="bilgiContainer" style="background: #f8f9fa; padding: 20px; border-radius: 5px;">
              <h4 style="margin-bottom: 15px; color: #333;">Sipariş Detayları</h4>
              <div id="siparisBilgileri" style="font-size: 14px; line-height: 2;"></div>
            </div>
          </div>
        </div>
        
        <div style="background: #f8f9fa; padding: 20px; border-radius: 5px; margin-bottom: 20px;">
          <h3 style="margin-bottom: 15px; font-size: 20px;">Üretim Aşamaları</h3>
          
          <div style="margin-bottom: 15px;">
            <label style="display: block; margin-bottom: 5px; font-weight: 500;">Aşama 1:</label>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
              <div>
                <label style="display: block; margin-bottom: 5px; font-size: 12px; color: #666;">Proses:</label>
                <select name="asama1" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                  <option value="">Proses Seçiniz...</option>
                  <% if (typeof processes !== 'undefined') { %>
                    <% processes.forEach(function(p) { %>
                      <option value="<%= p.ProsesID %>"><%= p.ProsesAdi %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
              <div>
                <label style="display: block; margin-bottom: 5px; font-size: 12px; color: #666;">Banyo Adımı:</label>
                <select name="banyo1" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                  <option value="">Banyo Seçiniz...</option>
                  <% if (typeof baths !== 'undefined') { %>
                    <% baths.forEach(function(b) { %>
                      <option value="<%= b.BanyoAdimID %>"><%= b.BanyoAdi %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
            </div>
          </div>
          
          <div style="margin-bottom: 15px;">
            <label style="display: block; margin-bottom: 5px; font-weight: 500;">Aşama 2:</label>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
              <div>
                <label style="display: block; margin-bottom: 5px; font-size: 12px; color: #666;">Proses:</label>
                <select name="asama2" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                  <option value="">Proses Seçiniz...</option>
                  <% if (typeof processes !== 'undefined') { %>
                    <% processes.forEach(function(p) { %>
                      <option value="<%= p.ProsesID %>"><%= p.ProsesAdi %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
              <div>
                <label style="display: block; margin-bottom: 5px; font-size: 12px; color: #666;">Banyo Adımı:</label>
                <select name="banyo2" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                  <option value="">Banyo Seçiniz...</option>
                  <% if (typeof baths !== 'undefined') { %>
                    <% baths.forEach(function(b) { %>
                      <option value="<%= b.BanyoAdimID %>"><%= b.BanyoAdi %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
            </div>
          </div>
          
          <div style="margin-bottom: 15px;">
            <label style="display: block; margin-bottom: 5px; font-weight: 500;">Aşama 3:</label>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
              <div>
                <label style="display: block; margin-bottom: 5px; font-size: 12px; color: #666;">Proses:</label>
                <select name="asama3" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                  <option value="">Proses Seçiniz...</option>
                  <% if (typeof processes !== 'undefined') { %>
                    <% processes.forEach(function(p) { %>
                      <option value="<%= p.ProsesID %>"><%= p.ProsesAdi %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
              <div>
                <label style="display: block; margin-bottom: 5px; font-size: 12px; color: #666;">Banyo Adımı:</label>
                <select name="banyo3" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                  <option value="">Banyo Seçiniz...</option>
                  <% if (typeof baths !== 'undefined') { %>
                    <% baths.forEach(function(b) { %>
                      <option value="<%= b.BanyoAdimID %>"><%= b.BanyoAdi %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
            </div>
          </div>
          
          <div style="margin-bottom: 15px;">
            <label style="display: block; margin-bottom: 5px; font-weight: 500;">Aşama 4:</label>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
              <div>
                <label style="display: block; margin-bottom: 5px; font-size: 12px; color: #666;">Proses:</label>
                <select name="asama4" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                  <option value="">Proses Seçiniz...</option>
                  <% if (typeof processes !== 'undefined') { %>
                    <% processes.forEach(function(p) { %>
                      <option value="<%= p.ProsesID %>"><%= p.ProsesAdi %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
              <div>
                <label style="display: block; margin-bottom: 5px; font-size: 12px; color: #666;">Banyo Adımı:</label>
                <select name="banyo4" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                  <option value="">Banyo Seçiniz...</option>
                  <% if (typeof baths !== 'undefined') { %>
                    <% baths.forEach(function(b) { %>
                      <option value="<%= b.BanyoAdimID %>"><%= b.BanyoAdi %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
            </div>
          </div>
          
          <div style="margin-bottom: 15px;">
            <label style="display: block; margin-bottom: 5px; font-weight: 500;">Aşama 5:</label>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
              <div>
                <label style="display: block; margin-bottom: 5px; font-size: 12px; color: #666;">Proses:</label>
                <select name="asama5" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                  <option value="">Proses Seçiniz...</option>
                  <% if (typeof processes !== 'undefined') { %>
                    <% processes.forEach(function(p) { %>
                      <option value="<%= p.ProsesID %>"><%= p.ProsesAdi %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
              <div>
                <label style="display: block; margin-bottom: 5px; font-size: 12px; color: #666;">Banyo Adımı:</label>
                <select name="banyo5" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                  <option value="">Banyo Seçiniz...</option>
                  <% if (typeof baths !== 'undefined') { %>
                    <% baths.forEach(function(b) { %>
                      <option value="<%= b.BanyoAdimID %>"><%= b.BanyoAdi %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
            </div>
          </div>
        </div>
        
        <button type="submit" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; padding: 12px 30px; border-radius: 5px; cursor: pointer; font-size: 16px;">
          Planlamayı Kaydet
        </button>
      </form>
    </div>
  </div>
  
  <script>
    document.getElementById('siparisSelect').addEventListener('change', function() {
      const selectedOption = this.options[this.selectedIndex];
      const siparisDetayContainer = document.getElementById('siparisDetayContainer');
      const cizimGorsel = document.getElementById('cizimGorsel');
      const siparisBilgileri = document.getElementById('siparisBilgileri');
      
      if (!this.value) {
        siparisDetayContainer.style.display = 'none';
        return;
      }
      
      siparisDetayContainer.style.display = 'block';
      
      const cizimYolu = selectedOption.getAttribute('data-cizim');
      if (cizimYolu && cizimYolu !== '' && cizimYolu !== 'null' && cizimYolu !== 'undefined') {
        cizimGorsel.innerHTML = '<img src="/uploads/' + cizimYolu + '" style="max-width: 100%; max-height: 300px; border-radius: 5px; border: 1px solid #ddd;">';
      } else {
        cizimGorsel.innerHTML = '<p style="color: #999;">Teknik çizim yüklenmemiş</p>';
      }
      
      const terminTarihi = selectedOption.getAttribute('data-termintarihi');
      let terminStr = '-';
      if (terminTarihi && terminTarihi !== '' && terminTarihi !== 'null') {
        const tarih = new Date(terminTarihi);
        terminStr = tarih.toLocaleDateString('tr-TR');
      }
      
      let bilgiHTML = '';
      bilgiHTML += '<div><strong>Sipariş Kodu:</strong> ' + (selectedOption.getAttribute('data-sipariskodu') || '-') + '</div>';
      bilgiHTML += '<div><strong>Müşteri:</strong> ' + (selectedOption.getAttribute('data-musteriadi') || '-') + '</div>';
      bilgiHTML += '<div><strong>Parça Adı:</strong> ' + (selectedOption.getAttribute('data-parcaadi') || '-') + '</div>';
      bilgiHTML += '<div><strong>Parça Türü:</strong> ' + (selectedOption.getAttribute('data-parcaturu') || '-') + '</div>';
      bilgiHTML += '<div><strong>Miktar:</strong> ' + (selectedOption.getAttribute('data-miktar') || '-') + ' Adet</div>';
      bilgiHTML += '<div><strong>Parça Numarası:</strong> ' + (selectedOption.getAttribute('data-parcanumarasi') || '-') + '</div>';
      bilgiHTML += '<div><strong>Çizim Revizyonu:</strong> ' + (selectedOption.getAttribute('data-cizimrevizyonu') || '-') + '</div>';
      bilgiHTML += '<div><strong>Kaplama Standardı:</strong> ' + (selectedOption.getAttribute('data-kaplamastandardi') || '-') + '</div>';
      bilgiHTML += '<div><strong>Termin Tarihi:</strong> ' + terminStr + '</div>';
      
      siparisBilgileri.innerHTML = bilgiHTML;
    });
  </script>
</body>
</html>
